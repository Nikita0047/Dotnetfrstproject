@model TaskList

<div class="card shadow border-0 mt-4">
	<div class="row">
		<div class=" col-12 text-center">
			<h2 class=" text-white py2"> Create Task </h2>
		</div>
	</div>

<form method="post" class="row">
	<div class="border p-2 mt-2">
		<div class="form-floating py-2 col-12">
			<input asp-for="Name" class="form-control border-0 shadow"/>
			<label asp-for="Name" class="ms-2"></label>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class=" form-floating py-2 col-12">
			<input asp-for="Priority" class="form-control border-0 shadow" />
			<label asp-for="Priority" class="ms-2">Priority</label>
			<span asp-validation-for="Priority" class="text-danger"></span>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="isCompleted" class="form-check-label" />
			<label asp-for="isCompleted" class="ms-1">isCompelete</label>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
			<button type="submit" class="form-control">Create Task</button>
			</div>
			<div class="col-6 col-md-3"> 
				<a asp-controller="Tasks" asp-action="Index" class=" btn btn-primary border form-control">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>
